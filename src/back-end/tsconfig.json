{
  "compilerOptions": {
    // "typeRoots": ["./node_modules/@types"],
    // "types": ["node"],
    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@user/*": ["src/modules/user/*"],
      "@portfolio/*": ["src/modules/portfolio/*"],
      "@project/*": ["src/modules/project/*"],
      "@competition/*": ["src/modules/competition/*"],
      "@email/*": ["src/modules/email/*"],
      "@chat/*": ["src/modules/chat/*"],
      "@rating/*": ["src/modules/rating/*"],
      "@projectCompDetails/*": ["src/modules/projectCompDetails/*"],
      "@favorateProjects/*": ["src/modules/favorateProjects/*"],
      "@comments/*": ["src/modules/comments/*"],
      "@postMetrics/*": ["src/modules/postMetrics/*"],
      "@shared/*": ["src/shared/*"],
      "@compositionRoot/*": ["src/compositionRoot/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./api/**/*.ts",
    "./src/**/*.ts",
    "./src/infrastructure/types/**/*.d.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ],
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true
  }
}